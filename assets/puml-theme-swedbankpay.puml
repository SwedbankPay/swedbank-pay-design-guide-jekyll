!$warning_text = $white
!$danger_text = $white

!procedure $success($msg)
  <font color=$brand_success><b>$msg
!endprocedure

!procedure $failure($msg)
  <font color=$brand_error><b>$msg
!endprocedure

!procedure $warning($msg)
  <font color=$brand_warning><b>$msg
!endprocedure

!procedure $code($msg)
  <font:monospaced>$msg</font>
!endprocedure

!procedure $participant($sprite, $title)
    participant "<$$sprite,color=$light_orange>\n\n$title"
!endprocedure

!procedure $primary_scheme()
	FontColor $primary_text
	BorderColor $brand_primary
	BackgroundColor $brand_primary_light
!endprocedure

